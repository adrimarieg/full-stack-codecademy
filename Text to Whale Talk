let input = "Today is a really great day";
const vowels = ['a','e','i','o','u'];
let resultArray = [];

for (let i = 0; i< input.length; i++) {
  for (let j = 0; j < vowels.length; j++) {
    if (vowels[j] === input[i]) {
        if (vowels[j] === 'e'){
          resultArray.push('ee');
        } else if (vowels[j] === 'u') {
          resultArray.push('uu');
        } else 
      resultArray.push(vowels[j])
    }
  }
}

console.log(resultArray.join('').toUpperCase());
